@model SolveChicago.Common.Models.Profile.Member.MemberProfile

@{
    ViewBag.Title = "MemberOverview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-dashboard-body-content">


    <div class="row app-dashboard-form-container-space-around">


        <section class="overview-card">

            <header>
                <h1 class="overview-card-header">Personal Info</h1>
