                <div class="row medium-unstack">

                    <div class="columns has-space">
                        <p>Email</p>
                    </div>

                    <div class="columns has-space">
                        <span>@Model.Email</span>
                    </div>
                    <hr class="overview-line-divider">
                </div>
                <!-- End of Row-->
                <!-- Row-->
                <div class="row medium-unstack">

                    <div class="columns has-space">
                        <p>Phone</p>
                    </div>

                    <div class="columns has-space">
                        <span>@Model.Phone</span>
                    </div>
                    <hr class="overview-line-divider">
                </div>
                <!-- End of Row-->
                <!-- Row-->
                <div class="row medium-unstack">

                    <div class="columns has-space">
                        <p>Contact Preference</p>
                    </div>

                    <div class="columns has-space">
                        <span>@Model.ContactPreference</span>
                    </div>
                    <hr class="overview-line-divider">
                </div>
                <!-- End of Row-->
                <!-- Row-->
                <div class="row medium-unstack">

                    <div class="columns has-space">
                        <p>Birthday</p>
                    </div>

                    <div class="columns has-space">
                        <span>@(Model.Birthday.HasValue ? @Model.Birthday.Value.ToShortDateString() : "")</span>
                    </div>
                    <hr class="overview-line-divider">
                </div>
                <!-- End of Row-->
                <!-- Row-->
