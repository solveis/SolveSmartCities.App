            </div>

            <!-- THis is to wrap the info when theres an image on the right side of the form-->
            <div class="overview-wrapper">

                <!-- Row-->
                <div class="row medium-unstack">

                    <div class="columns has-space">
                        <p>Name</p>
                    </div>

                    <div class="columns has-space">
                        <span>@Model.FullName</span>
                    </div>
                    <hr class="overview-line-divider">
                </div>
                <!-- End of Row-->
                <!-- Row-->
                <div class="row medium-unstack">

                    <div class="columns has-space">
                        <p>Gender</p>
                    </div>

                    <div class="columns has-space">
                        <span>@Model.Gender</span>
                    </div>
                    <hr class="overview-line-divider">
                </div>
                <!-- End of Row-->
                <!-- Row-->
                <div class="row medium-unstack">

                    <div class="columns has-space">
                        <p>Address</p>
                    </div>

                    <div class="columns has-space">
                        <span>@Model.Address</span>
                    </div>
                    <hr class="overview-line-divider">
                </div>
                <!-- End of Row-->
