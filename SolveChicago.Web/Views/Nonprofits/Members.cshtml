@model IEnumerable<SolveChicago.Entities.Member>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Members")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Email, "Index", "Members", new { memberId = item.Id }, new { })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "MemberOverview", "Profile", new { memberId = item.Id }, null) |
            @Html.ActionLink("Details", "Details", "Members", new { memberId = item.Id }, null) |
            @Html.ActionLink("Assign Case Manager", "AssignCaseManager", new { memberId = item.Id, nonprofitId = ViewBag.NonprofitId })
        </td>
    </tr>
}

</table>
